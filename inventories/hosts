#Example with optional extra parameters (see ansible documentation: http://docs.ansible.com/intro_inventory.html#hosts-and-groups)
#See hosts.example for more info 
[hosts]
hostname           ansible_ssh_user=user     ansible_ssh_port=ssh_port         ansible_ssh_host=ip_of_host		ansible_ssh_private_key_file=path_to_private_key

[hosts:vars]
groupname=serverdensity_groupname
#centos or debian
linux_distro=linux_distribution
